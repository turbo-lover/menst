<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <Button android:layout_width="@dimen/null_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:id="@+id/button_minus"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/white"
            android:background="@color/pink"
           />
    <RelativeLayout android:layout_width="@dimen/null_dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relative"
                    android:layout_weight="2"
                    android:background="@color/text_view_number_picker"
                    android:minWidth="35dp"
            >
        <TextView
                android:id="@+id/number_picker_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size_big"
                android:textAlignment="gravity"
                android:gravity="center"
                android:text="23"
               />
    </RelativeLayout>
    <Button
            android:layout_width="@dimen/null_dp"
            android:layout_height="match_parent"
            android:text="+"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"
            android:id="@+id/button_plus"
            android:background="@color/pink"
            />
</LinearLayout>